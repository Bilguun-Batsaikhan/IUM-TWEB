<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <%- include('partials/navbarScripts') %>
    <script src="./javascripts/competition-table.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@301&family=Open+Sans:wght@300&display=swap" rel="stylesheet">
</head>
<body class="body">
<%- include('partials/navbar') %>
<div class="main-content">
    <div class="container mt-4 custom-table">
        <table class="table table-dark">
            <thead>
            <tr>
                <th colspan="6" id="table-nav">
                    <div class="row nav-bar">
                        <div class="col-2">
                            <button id="switchButton">Switch</button>
                        </div>
                        <div class="col-2">
                            <select id="dateSelect">
                                <option value="">All Dates</option>
                                <!-- Dates will be added here by JavaScript -->
                            </select>
                        </div>
                        <div class="col-2">
                            <button id="tableButton">Table</button>
                        </div>
                        <div class="col-2">
                            <button id="matchButton" class="active">Match</button>
                        </div>
                        <div class="col-2">
                            <button id="statisticButton">Statistic</button>
                        </div>
                        <div class="col-2">
                            <button id="graphButton">Graph</button>
                        </div>
                    </div>
                </th>
            </tr>

            <tr id="tableHead">
                <th>Date</th>
                <th>Home Team</th>
                <th>Score</th>
<!--                <th>Away<br>Team Goals</th>-->
                <th>Away Team</th>
                <th>Stadium</th>
            </tr>

            </thead>
            <tbody id="competition-table-body">
            <!-- Table rows will be added here by JavaScript -->
            </tbody>
        </table>
        <div id="graphContainer"></div>
        <div id="pagination" class="mb-3">
            <button id="prevButton" class="btn btn-primary btnC">Previous</button>
            <span class="mx-2" style="color: aliceblue;">Page: <span id="currentPage">1</span></span>
            <button id="nextButton" class="btn btn-primary btnC">Next</button>
            <button id="expandButton" class="btn btn-primary btnC">Show more</button>
        </div>
    </div>
</div>


<button id="topButton" class="topButton"> <img src="/img/arrow1.png" alt=""></button>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<%- include('partials/footer') %>

<link rel="stylesheet" href="./stylesheets/competition-table.css">
</body>
</html>

